<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.SearchMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/Trends_SearchLayout_Relative"
        >
        <Spinner
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content"
            android:id="@+id/Trends_Spinner"
            android:layout_margin="10dp"
            ></Spinner>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:id="@+id/Trends_Search_Button"
            ></ImageButton>

    </LinearLayout>

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/Trends_SearchLayout_Relative"
        android:visibility="gone"
        android:id="@+id/Trends_ProgressBar"
        ></ProgressBar>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/Trends_SearchLayout_Relative"
        android:id="@+id/Trends_ListView"/>

</RelativeLayout>