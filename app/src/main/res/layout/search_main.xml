<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".search.SearchMain">

    <FrameLayout
        android:id="@+id/SearchMain_Container_FragmentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/SearchMain_Navigation_View"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/SearchMain_Navigation_View"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/search_main_menu"
        android:background="@color/background"/>


</RelativeLayout>